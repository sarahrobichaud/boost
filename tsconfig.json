{
  "include": ["config/**/*","src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "rootDir": "./src",
    "module":"CommonJS",
    "lib": ["ES2019", "ES6"],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true
  }
}
